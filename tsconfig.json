{
  "files": [],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // Gradually enabling strict mode checks
    "noImplicitAny": true,  // Changed: Catch implicit any types
    "noUnusedParameters": false,  // Keep disabled for now
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": true,  // Changed: Catch unused variables
    "strictNullChecks": true  // Changed: Enable null safety
  }
}
